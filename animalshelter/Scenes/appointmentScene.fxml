<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="animalshelter.Controllers.appointmentController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <Button fx:id="button_create" layoutX="14.0" layoutY="355.0" mnemonicParsing="false" onAction="#createAppointmentClicked" text="Create Appointment" />
            <Button fx:id="button_update" layoutX="176.0" layoutY="355.0" mnemonicParsing="false" onAction="#updateAppointmentClicked" text="Update Appointment" />
            <Button fx:id="button_adoptionPage" layoutX="505.0" layoutY="355.0" mnemonicParsing="false" onAction="#adoptionPageClicked" prefHeight="25.0" prefWidth="99.0" text="Adoption Page" />
            <TableView fx:id="table_appointments" layoutX="207.0" layoutY="31.0" prefHeight="312.0" prefWidth="419.0">
              <columns>
                <TableColumn fx:id="col_appointmentID" prefWidth="102.0" text="Appointment ID" />
                <TableColumn fx:id="col_dog_name" prefWidth="78.0" text="Dog ID" />
                  <TableColumn fx:id="col_date" minWidth="0.0" prefWidth="72.0" text="Date" />
                  <TableColumn fx:id="col_reason" prefWidth="87.0" text="Reason" />
                  <TableColumn fx:id="col_time" prefWidth="82.0" text="Time" />
              </columns>
            </TableView>
            <Label fx:id="label_create_text" layoutX="22.0" layoutY="8.0" text="Create New Appointment">
               <font>
                  <Font name="Franklin Gothic Heavy Italic" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="tf_dog_name" layoutX="84.0" layoutY="49.0" prefHeight="25.0" prefWidth="108.0" />
            <TextField fx:id="tf_time" layoutX="84.0" layoutY="136.0" prefHeight="25.0" prefWidth="108.0" />
            <RadioButton fx:id="rb_adopt" layoutX="69.0" layoutY="200.0" mnemonicParsing="false" text="Adopt Dog" />
            <RadioButton fx:id="rb_visit" layoutX="69.0" layoutY="235.0" mnemonicParsing="false" text="Visit Dog" />
            <DatePicker fx:id="datepicker_date" layoutX="84.0" layoutY="94.0" prefHeight="25.0" prefWidth="108.0" />
            <Label fx:id="label_dog_name" layoutX="35.0" layoutY="53.0" text="Dog ID" />
            <Label fx:id="label_date" layoutX="42.0" layoutY="98.0" text="Date" />
            <Label fx:id="label_time" layoutX="41.0" layoutY="140.0" text="Time" />
            <Label fx:id="label_reason_for_visit" layoutX="12.0" layoutY="179.0" text="Reason for Visit:" />
            <Button fx:id="button_delete_appointment" layoutX="342.0" layoutY="355.0" mnemonicParsing="false" onAction="#deleteAppointmentClicked" prefHeight="25.0" prefWidth="124.0" text="Delete Appointment" />
            <Label fx:id="label_note" layoutX="273.0" layoutY="7.0" text="NOTE: All appointments are 1 hour max from selected time!" />
      </children>
    </AnchorPane>
  </children>
</VBox>
